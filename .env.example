# Mural Pay API Keys (from Mural dashboard)
MURAL_API_KEY=your_api_key
MURAL_TRANSFER_API_KEY=your_transfer_api_key

# Your Mural account details
MURAL_ACCOUNT_ID=your_account_id
MURAL_DEPOSIT_ADDRESS=your_polygon_deposit_address

# Colombian bank payout configuration (created via Mural API)
MURAL_COUNTERPARTY_ID=your_counterparty_id
MURAL_PAYOUT_METHOD_ID=your_payout_method_id

# Upstash Redis (from Upstash console)
UPSTASH_REDIS_REST_URL=your_redis_url
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Merchant dashboard auth (optional - defaults to admin/mural123)
MERCHANT_USER=admin
MERCHANT_PASS=your_secure_password

# App URL (set after deployment)
NEXT_PUBLIC_APP_URL=https://your-app.netlify.app
NEXT_PUBLIC_DEPOSIT_ADDRESS=your_polygon_deposit_address
NEXT_PUBLIC_PAYOUT_ENABLED=false
